#!/bin/bash

declare -A rigs=(
    ["hp"]="192.168.18.117"
    ["vm"]="192.168.18.218"
    ["msi"]="192.168.18.56"
)

declare -A users=(
    ["hp"]="HP"
    ["vm"]="VM"
    ["msi"]="MSI"
)

declare -A pass=(
    ["hp"]=$(pass mail/finances)
    ["vm"]=$(pass mail/finances)
    ["msi"]=1234
)

xfreerdp /u:"${users["$1"]}" /p:"${pass["$1"]}" /v:"${rigs["$1"]}":3389 \
    /w:1904 /h:1164 /dynamic-resolution \
    /network:auto /cert:ignore \
    /sound:sys:pulse \
    /gfx:AVC444 /bpp:32 /gdi:sw \
    /drive:RDP,$HOME/RDP \
    /wm-class:xfreerdp \
    +clipboard
