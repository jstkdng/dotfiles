# vi:ft=sshconfig

HashKnownHosts yes

Host *
    ConnectTimeout 30
    ServerAliveInterval 10
    ControlMaster auto
    ControlPersist yes
    ControlPath ~/.ssh/socket-%r@%h:%p

Host aur aur.archlinux.org
	User aur
	Hostname aur.archlinux.org

Host vps
	User arch
	Hostname vin.ovh

Host rpi
	User ubuntu
	Hostname europa
