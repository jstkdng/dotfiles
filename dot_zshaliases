alias inst="sudo pacman -S"
alias rmv="sudo pacman -Rns"
alias history="history 0"
alias watchdirty="watch -x -t awk '/Dirty/||/Writeback:/{print}' /proc/meminfo"
alias mountdisk="udisksctl mount -b"
alias delet="shred -u -v"
alias mountsec="encfs ~/.secure ~/Secure"
alias free="free --si"
alias ccat="pygmentize -g -O style=colorful,linenos=1"
