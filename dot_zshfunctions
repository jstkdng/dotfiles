#!/bin/zsh

function copy()
{
    command xclip -sel c < ${1}
    echo "Copied file ${1} to clipboard!"
}

function downmp3()
{
    youtube-dl -x --audio-format=mp3 -o ${PWD}/%(title)s.%(ext)s $@
}

function msmnt()
{
    udisksctl mount -b "$@" -o dmask=022,fmask=133
}

function xmr-wallet()
{
    monero-wallet-cli \
        --config-file ${HOME}/.config/monero/wallet.conf \
        --wallet-file ${HOME}/Nextcloud/Crypto/xmr/xmr \
        "${@}"
}
