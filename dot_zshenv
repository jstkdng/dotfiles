# vi: ft=sh
XDG_CONFIG_HOME=$HOME/.config
XDG_CACHE_HOME=$HOME/.cache
XDG_DATA_HOME=$HOME/.local/share

EDITOR=/usr/bin/nvim
SUDO_EDITOR=$EDITOR

SYSTEMD_COLORS=1
SYSTEMD_URLIFY=0

PAGER="/usr/bin/less"
MANPAGER=$PAGER
SYSTEMD_PAGER=$PAGER
GIT_PAGER=$PAGER

PATH=$HOME/.local/bin:$PATH
export GOPATH=$HOME/Code/go
